<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FAFF"
    tools:context=".Authentication.SignUp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="left"
        android:text="New"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginEnd="204dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="left"
        android:text="User"
        android:textColor="#2C93F3"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="172dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left"
        android:text="Create an account"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/name"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:elevation="20dp"
        android:textColor="#1E1E1E"
        android:textColorHint="#7C7C7C"
        android:background="@drawable/edittext_layout"
        android:drawableLeft="@drawable/profile"
        android:paddingLeft="6dp"
        android:hint="Name"
        android:drawablePadding="6dp"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/emailsignup"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:drawablePadding="6dp"
        android:textColor="#1E1E1E"
        android:textColorHint="#7C7C7C"
        android:background="@drawable/edittext_layout"
        android:drawableLeft="@drawable/email"
        android:paddingLeft="6dp"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/passswordsignup"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textColor="#1E1E1E"
        android:textColorHint="#7C7C7C"
        android:elevation="20dp"
        android:paddingLeft="6dp"
        android:drawablePadding="6dp"
        android:background="@drawable/edittext_layout"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/visibility_off"
        android:paddingRight="10dp"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="@+id/emailsignup"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/emailsignup"
        app:layout_constraintTop_toBottomOf="@+id/emailsignup" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/visibility_off"
        android:paddingRight="10dp"
        android:hint="Confirm Password"
        android:elevation="20dp"
        android:paddingLeft="6dp"
        android:drawablePadding="6dp"
        android:textColor="#1E1E1E"
        android:textColorHint="#7C7C7C"
        android:background="@drawable/edittext_layout"
        app:layout_constraintEnd_toEndOf="@+id/passswordsignup"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/passswordsignup"
        app:layout_constraintTop_toBottomOf="@+id/passswordsignup" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="Gender"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="67dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/roboto"
        android:text="You're?"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3">

        <RadioButton
            android:id="@+id/male_btn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Male"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/female_btn"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Female"
            android:textSize="18dp"
            />

        <RadioButton
            android:id="@+id/other_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Other"
            android:textSize="18dp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3">

        <RadioButton
            android:id="@+id/owner_btn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Owner"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/customer_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Customer"
            android:textSize="18dp" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>